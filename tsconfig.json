{
  "compilerOptions": {
    "strict": true,
    "target": "es2017",
    "lib": ["es6", "es2016"],
    "jsx": "react-native",
    "module": "commonjs",
    "declaration": true,
    "outDir": "lib",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "types": ["react", "react-native"]
  },
  "include": ["index.ts"],
  "exclude": ["node_modules", "dist", "example"]
}
